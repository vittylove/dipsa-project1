<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CA1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">The T9 Store</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @ViewData["home"]" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>

                <div class="shoppingcart" style="float:right">
                    <a href="/ShoppingCart/Index" style="text-decoration:none"> <img src="/img/shoppingcart.png" class="cart" width="30" /> <span id="cartIcon" style="font-size:18px; font-family:'Comic Sans MS'; font-weight:bold"></span> &emsp; </a>
                </div>

                <div class="search_field" float="right">
                    <form id="searchform" action="/Home/Search" method="post">
                        <input id="searchBar" type="text" value=@ViewData["userInput"] placeholder="Enter your search here..." name="search" />
                    </form>
                </div>

                <div style="float:right">
                    @if ((bool)ViewData["IsLogin"] == false)
                    {
                        <a class="nav-link text-dark @ViewData["Is_Login"]" asp-controller="Login" asp-action="Index">Login</a>
                    }
                    else
                    {
                        <a class="nav-link text-dark" asp-controller="Logout" asp-action="Index">Logout</a>
                    }
                </div>

                <div style="float:right">
                    @if ((bool)ViewData["IsLogin"] == false)
                    {
                        <a class="nav-link text-dark @ViewData["Registering"]" asp-controller="Register" asp-action="Index">Register</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if ((bool)ViewData["IsLogin"] == true)
            {
                <table id="hello">
                    <tr>
                        <th>Hello @ViewData["username"] | <a href="/History">My Purchases</a> <hr/> </th>
                    </tr>
                </table>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - The T9 Store</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/product/search.js"></script>
    <script src="~/js/shoppingcart/AddToCart.js"></script>
@*    <script src="~/js/shoppingcart/cartIcon.js"></script>*@
    @RenderSection("Scripts", required: false)
</body>
</html>
